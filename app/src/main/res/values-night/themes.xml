<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JrCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dope_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/black</item>
        <item name="backgroundColorVariant">@color/dope_black</item>
        <item name="buttonBackgroundColor">@color/dope_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dope_green</item>
        <item name="colorSecondaryVariant">@color/dope_dark_green</item>
        <item name="colorOnSecondary">@color/dope_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Darkmode for the lazy: s2
        <item name="android:forceDarkAllowed">true</item>
        -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="color">@color/black</item>
        <item name="iconStartPadding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipIconTint">?attr/colorControlNormal</item>
        <item name="checkedIcon">@null</item>
        <item name="chipIconVisible">true</item>
    </style>

</resources>